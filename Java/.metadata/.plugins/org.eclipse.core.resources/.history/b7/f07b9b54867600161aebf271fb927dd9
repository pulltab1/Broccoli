import java.awt.Color;

import rennyu.RFrame;

public class Module {

	public static final int MODULE_DRAW_SIZE=20;

	private float x;
	private float y;
	private byte type;
	private RFrame frame;
	private Color color;

	public Module(RFrame frame,float x,float y,byte type,Color color){
		this.frame=frame;
		this.x=x;
		this.y=y;
		this.type=type;
		this.color=color;
	}
	public void setPosition(float x,float y){
		this.x=x;
		this.y=y;
	}
	public void movePosition(float x,float y){
		this.x+=x;
		this.y+=y;
	}
	public float getPositionX(){
		return x;
	}
	public float getPositionY(){
		return y;
	}
	public byte getType(){
		return type;
	}
	public void draw(float center_x,float center_y,float zoom){
		frame.drawBox(
				(int)((x-center_x)*zoom),
				(int)((y-center_y)*zoom),
				(int)((x+MODULE_DRAW_SIZE/zoom-center_x)*zoom),
				(int)((y+MODULE_DRAW_SIZE/zoom-center_y)*zoom),
				color,
				true);
	}
}
