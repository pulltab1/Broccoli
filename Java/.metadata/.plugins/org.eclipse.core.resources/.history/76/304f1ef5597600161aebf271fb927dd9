import java.awt.Color;

import rennyu.RFrame;

public class Module {

	private static final int MODULE_DRAW_SIZE=20;

	private float x;
	private float y;
	private Module next;
	private byte type;
	private RFrame frame;
	private Color color;

	public Module(RFrame frame,float x,float y,byte type,Color color){
		this.frame=frame;
		this.x=x;
		this.y=y;
		this.type=type;
		this.color=color;
	}
	public Module getNextModule(){
		return next;
	}
	public void setNextModule(Module next){
		this.next=next;
	}
	public void setPosition(float x,float y){
		this.x=x;
		this.y=y;
	}
	public void movePosition(float x,float y){
		this.x+=x;
		this.y+=y;
	}
	public float getPositionX(){
		return x;
	}
	public float getPositionY(){
		return y;
	}
	public byte getType(){
		return type;
	}
	public void draw(float center_x,float center_y){
		if(next!=null){
			frame.drawLine(
				(int)(x+MODULE_DRAW_SIZE/2-center_x),
				(int)(y+MODULE_DRAW_SIZE/2-center_y),
				(int)(next.x+MODULE_DRAW_SIZE/2-center_x),
				(int)(next.y+MODULE_DRAW_SIZE/2-center_y),
				Color.BLACK);
		}
		frame.drawBox(
				(int)(x-center_x),
				(int)(y-center_y),
				(int)(x+MODULE_DRAW_SIZE-center_x),
				(int)(y+MODULE_DRAW_SIZE-center_y),
				color,
				true);
	}
}
