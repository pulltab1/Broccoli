import java.awt.Color;

import rennyu.RFrame;

public class Module {

	private static final int MODULE_DRAW_SIZE=20;

	private float x;
	private float y;
	private Module next;
	private byte type;
	private RFrame frame;
	private Color color;

	public Module(RFrame frame,float x,float y,byte type,Color color){
		this.frame=frame;
		this.x=x;
		this.y=y;
		this.type=type;
		this.color=color;
	}
	public Module getNextModule(){
		return next;
	}
	public void setNextModule(Module next){
		this.next=next;
	}
	public void setPosition(float x,float y){
		this.x=x;
		this.y=y;
	}
	public void movePosition(float x,float y){
		this.x+=x;
		this.y+=y;
	}
	public float getPositionX(){
		return x;
	}
	public float getPositionY(){
		return y;
	}
	public byte getType(){
		return type;
	}
	private void drawConnectionLine(Module module){
		frame.drawLine(,,,,col);
	}
	public void draw(){
		if(next!=null){
			drawConnectionLine(next);
		}
		frame.drawBox((int)x,(int)y,(int)x+MODULE_DRAW_SIZE,(int)y+MODULE_DRAW_SIZE,color,true);
	}
}
