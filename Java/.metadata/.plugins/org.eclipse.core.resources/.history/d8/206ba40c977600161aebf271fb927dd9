import java.awt.Point;

import rennyu.RFrame;

public class Camera {

	private Point position;
	private float zoom=1;

	public int getPositionX(){
		return position.x;
	}
	public int getPositionY(){
		return position.y;
	}
	public void setPosition(int x,int y){
		
	}
	public void move(){
		if(frame.getClick(RFrame.MOUSE_INPUT_RIGHT)==1){
			mx=frame.getMousePosition().x;
			my=frame.getMousePosition().y;
		}
		else{
			camera_position.x+=frame.getMousePosition().x-mx;
			camera_position.y+=frame.getMousePosition().y-my;
			mx=frame.getMousePosition().x;
			my=frame.getMousePosition().y;
		}
	}
	public void zoom(float zoom){
		if(this.zoom+zoom>0){
			for(int i=0;i<module.length;i++){
				module[i].movePosition(
						-frame.getWidth()/2*zoom,
						-frame.getHeight()/2*zoom
					);
			}
			this.zoom+=zoom;
		}
	}
}
